{
  "policyVersion": "1.0",
  "policyName": "Organizational Leave & Holiday Policy",
  "lastUpdated": "2025-01-01",

  "company": {
    "locations": ["Hyderabad", "Tirupati"],
    "workWeek": "Monday-Friday",
    "attendanceHours": {
      "fullDayHours": 8,
      "halfDayHours": 4
    },
    "probationRestrictions": false,
    "negativeLeaveAllowed": true,
    "maxNegativeLeave": -3
  },

  "holidayCalendarSettings": {
    "updatedBy": "HR",
    "updateFrequency": "yearly",
    "mustPublishBefore": "January 1",
    "yearlyOverride": true,
    "dataSources": [
      "Indian National Holiday Calendar",
      "Telangana Govt Holiday Calendar",
      "Andhra Pradesh Govt Holiday Calendar",
      "Company Optional Holiday List"
    ]
  },

  "holidayCalendar2025": {
    "fixedHolidays": [
